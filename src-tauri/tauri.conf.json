{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ghost Query",
  "version": "0.1.0",
  "identifier": "com.ghostquery.app",
  "build": {
    "frontendDist": "../src/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm --prefix ../src run dev",
    "beforeBuildCommand": "npm --prefix ../src run build"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Ghost Query",
        "width": 800,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
