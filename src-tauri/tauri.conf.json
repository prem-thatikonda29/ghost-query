{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ghost Query",
  "version": "0.2.0",
  "identifier": "com.ghostquery.app",
  "build": {
    "frontendDist": "../src/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm --prefix ../src run dev"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Ghost Query",
        "width": 800,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.icns", "icons/icon.ico"]
  }
}
